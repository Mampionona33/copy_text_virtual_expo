{
  "name": "copy text virtual expo module 1",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "Copy all text from tab",
  "permissions": [
    "storage",
    "clipboardRead",
    "tabs",
    "pageCapture",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "img/icon16x16.png",
    "32": "img/icon32x32.png",
    "128": "img/icon128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  },

  "commands": {
    "Copy_selected_text_to_En": {
      "suggested_key": {
        "default": "Alt+1"
      },
      "description": "copy selected text to EN variable"
    },
    "Copy_selected_text_to_DE": {
      "suggested_key": {
        "default": "Alt+2"
      },
      "description": "copy selected text to DE variable"
    },
    "Copy_selected_text_to_FR": {
      "suggested_key": {
        "default": "Alt+3"
      },
      "description": "copy selected text to FR variable"
    },

    "inject_text": {
      "suggested_key": {
        "default": "Alt+Shift+1"
      },
      "description": "Inject text in idp text pop up"
    }
  }
}
